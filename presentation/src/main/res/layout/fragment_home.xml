<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="user"
            type="com.devsurfer.domain.model.userData.User" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:id="@+id/action_bar"
            app:title="@string/app_bar_title"
            app:titleTextAppearance="@style/StandardAppBarTitleStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/swipe_refresh_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll_layout"
                android:overScrollMode="never">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_user_profile"
                        android:paddingVertical="@dimen/normal_spacer"
                        android:paddingHorizontal="@dimen/standard_horizontal_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="@dimen/standard_profile_image_size"
                            android:layout_height="@dimen/standard_profile_image_size"
                            android:id="@+id/iv_user_profile"
                            loadUrl="@{user.avatarUrl}"
                            isCircle="@{true}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/normal_spacer"
                            android:layout_marginEnd="@dimen/standard_horizontal_margin"
                            app:layout_constraintStart_toEndOf="@id/iv_user_profile"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_user_nick"
                                android:text="@{user.login}"
                                android:textSize="@dimen/title_small"
                                android:textColor="?android:textColorPrimary"
                                android:fontFamily="@font/montserrat_alternates_bold"
                                android:maxLines="1"
                                android:ellipsize="end"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_user_email"
                                android:text="@{user.email}"
                                android:textSize="@dimen/body"
                                android:textColor="?android:textColorPrimary"
                                android:alpha=".8"
                                android:fontFamily="@font/montserrat_alternates_regular"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:visibility="@{user.email == null ? View.GONE : View.VISIBLE}"
                                tools:text="text@test.com"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_user_nick"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_user_repos"
                                android:text="@{@string/user_repos_content_format(user.publicRepos, user.totalPrivateRepos)}"
                                android:textSize="@dimen/caption"
                                android:textColor="?android:textColorPrimary"
                                android:alpha=".4"
                                android:fontFamily="@font/montserrat_alternates_regular"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_user_email"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_user_repos"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_user_profile">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_my_repo_list_title"
                            android:text="@string/plz_select_repository"
                            android:textSize="@dimen/body"
                            android:textColor="?android:textColorPrimary"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            android:layout_marginStart="@dimen/standard_horizontal_margin"
                            android:layout_marginTop="@dimen/medium_spacer"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_my_repos"
                            android:overScrollMode="never"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/normal_spacer"
                            android:paddingBottom="@dimen/large_spacer"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            tools:listitem="@layout/item_repository"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_my_repo_list_title"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include layout="@layout/layout_loading_progress" android:id="@+id/layout_loading_progress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
